{% block datagrid_column_filter__theme %}
    <th>
    	<div id="div_filter_theme" onmouseout="hideFiltersOpts( event, 'theme' );">
				<div style="white-space: nowrap;">
	        <input type="hidden" name="{{ datagrid.pager.getConfig('filtersVar') }}[f][theme]" value="theme" />
	        <input type="hidden" name="{{ datagrid.pager.getConfig('filtersVar') }}[o][theme]" value="equals" />
	
	        <select name="{{ datagrid.pager.getConfig('filtersVar') }}[v][theme]" onchange="$('#datagrid form').submit()">
	            <option value="">-- Th√®me --</option>
	            {% for row in field.getOption('select_options') %}
	                <option value="{{ row.id }}" {% if datagrid.pager.getValue('filtersVar').v['theme']|default('') == row.id %}selected="selected"{% endif %}>{{ row.nom }}</option>
	            {% endfor %}
	        </select>
	      </div>
	    </div>
    </th>
{% endblock %}
{% block datagrid_column_filter__localisation %}
    <script type="text/javascript">
		var datas =[
			{% if datagrid.pager.getValue('filtersVar') and datagrid.pager.getValue('filtersVar').v['localisation'] %}
		 		{id: {{ datagrid.pager.getValue('filtersVar').v['localisation'] }}, nom: "{{ field.getOption('selected_localisation') }}"},
			{% endif %}
		]
		</script>
    <th>
    	<div id="div_filter_localisation" onmouseout="hideFiltersOpts( event, 'localisation' );">
				<div style="white-space: nowrap;">
	        <input type="hidden" name="{{ datagrid.pager.getConfig('filtersVar') }}[f][localisation]" value="localisation" />
	        <input type="hidden" name="{{ datagrid.pager.getConfig('filtersVar') }}[o][localisation]" value="equals" />
	        <input class="tokeninput_unique_datagrid" name="{{ datagrid.pager.getConfig('filtersVar') }}[v][localisation]" />
	      </div>
	    </div>
    </th>
{% endblock %}
