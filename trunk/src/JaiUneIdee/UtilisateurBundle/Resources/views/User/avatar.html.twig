{% extends "FOSUserBundle::layout_profile.html.twig" %}

{% block title %}Votre Avatar{% endblock %}
{% block mainCol %}
    <h1>Votre Avatar</h1>
    
    {% if (user.avatar)%}
    <img src="{{ image('../../upload/avatar/' ~ user.id ~'/' ~ user.avatar).cropResize(120,120)}}" alt="avatar" />
    <br />
    <br />
    <a href="{{ path('supprimer_avatar') }}" >Supprimer mon avatar</a>
    {% else%}
    <form action="{{ path('avatar') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input type="submit" />
    </form>
    {% endif%}
