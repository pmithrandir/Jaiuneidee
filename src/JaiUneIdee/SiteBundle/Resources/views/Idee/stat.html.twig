{% extends 'JaiUneIdeeSiteBundle::layout_1_col.html.twig' %}
{% block title %}Statistiques de l'idée : {{idee}}{% endblock%}

{% block javascript %}
    {{ parent() }}
    <!--[if lt IE 9]><script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/excanvas.js') }}"></script><![endif]-->
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/jquery.jqplot.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.highlighter.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.cursor.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.dateAxisRenderer.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.pieRenderer.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.donutRenderer.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.barRenderer.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.categoryAxisRenderer.min.js') }}"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/jqplot/plugins/jqplot.pointLabels.min.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jqplot/jquery.jqplot.css') }}" />
{% endblock %}

{% block mainCol %}
    <h1>Stats de l'idée : <a class="idee" href="{{ path('JaiUneIdeeSiteBundle_idee_show', { 'id': idee.id, 'slug': idee.slug }) }}" alt="{{ idee}}" title="{{ idee}}">{{idee}}</a></h1>
        <br />
        {% for tabStatsJsonType in tabStatsJson%} 
            {% for key,value in tabStatsJsonType%} 
                 <div id="{{key}}" class="stat_idee"></div>
            {% endfor%}
        {% endfor%}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        jQuery(document).ready(function() {
            {% for key,value in tabStatsJson.pie%} 
                var plot1 = jQuery.jqplot ('{{key}}', [{{value.json|raw}}],
                {
                  title: "{{value.title}}",
                  series:[
                    {label:'Neutre'},
                    {label:'Pour'},
                    {label:'Contre'}
                  ],
                  seriesColors: [ "#FFA500", "#90EE90", "#FF0000"],
                  seriesDefaults: {
                    // Make this a pie chart.
                    renderer: jQuery.jqplot.PieRenderer,
                    rendererOptions: {
                      // Put data labels on the pie slices.
                      // By default, labels show the percentage of the slice.
                      showDataLabels: true
                    }
                  },
                  legend: { show:true, location: 'e' }
                }
              );
            {% endfor%}
            {% for key,value in tabStatsJson.bar%}
                var ticks = ['0-18', '18-25', '25-35', '35-50', '50-65', '65+'];
                var plot1 = jQuery.jqplot ('{{key}}', {{value.json|raw}},
                {
                  title: "{{value.title}}",
                  stackSeries: true,
                  seriesDefaults: {
                    // Make this a pie chart.
                    renderer:$.jqplot.BarRenderer,
                    rendererOptions: {
                        // Put a 30 pixel margin between bars.
                        barMargin: 30,
                        // Highlight bars when mouse button pressed.
                        // Disables default highlighting on mouse over.
                        highlightMouseDown: true   
                    }
                  },
                  series:[
                    {label:'Neutre'},
                    {label:'Pour'},
                    {label:'Contre'}
                  ],
                  seriesColors: [ "#FFA500", "#90EE90", "#FF0000"],
                  axes: {
                    xaxis: {
                        renderer: $.jqplot.CategoryAxisRenderer,
                        ticks: ticks
                    },
                    yaxis: {
                      // Don't pad out the bottom of the data range.  By default,
                      // axes scaled as if data extended 10% above and below the
                      // actual range to prevent data points right on grid boundaries.
                      // Don't want to do that here.
                      padMin: 0
                    }
                  },
                  legend: { show:true, location: 'e' }
                }
              );
            {% endfor%}
        });
    </script>
{% endblock %}